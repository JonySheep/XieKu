/* pages/home/home.wxss */
page{
background-color: #f5f5f6;
font-family: PingFang SC Regular;
}
.search {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
  width: 100%;
  height: 65px;
}

.center {
  text-align: center;
  margin-left: 25px;
  font-size: 14px;
  color: #ccc;
}

.header-bd {
  width: 100%;
  padding-right: 20px;
  padding-left: 20px;
  padding-top: 6px;
  padding-bottom: 6px;
  height: 20px;
}

.search_input {
  float: left;
  background: white;
  border-radius: 11px;
  width: 70%;
  font-size: 16px;
  margin-left: 10px;
  text-align: center;
}

.sea {
  width: 18px;
  height: 18px;
  position: relative;
  right: 10%;
}

.cate {
  width: 100%;
  color: white;
  text-align: center;
  height: 16px;
  float: right; 
}

.cate text {
  font-size: 12px;
  margin-right: 10px;
  margin-left: 10px;
  display: inline-flex;
}

.banner {
  width: 100%;
  height: 240px;
  display: block;
}

.slide-image {
  width: 100%;
  height: 240px;
}

scroll-view {
  width: 100%;
}

.content {
  width: 95%;
  margin-left: 9px;
  margin-right: 9px;
}

.nav {
  margin-top: 3px;
  font-size: 14px;
  color: #9c9c9c;
  white-space: nowrap;
  display: flex;
}

.nav2 {
  white-space: nowrap;
  display: flex;
}

.nav view {
  display: inline-flex;
  margin-right: 15px;
}

.active {
  font-weight: 600;
  color: #545454;
  border-bottom: 2px solid #ffe202;
}

.product {
  float: left;
  position: relative;
  width: 133px;
  overflow: hidden;
  margin-right: 5px;
}

.product .img_p {
  /* width: 133px;
  height: 146px; */
  width: 244rpx;
  height: 244rpx;
}

.product .title {
  display: block;
  font-size: 12px;
  font-weight: 400;
  overflow: hidden;
  height: 16px;
}

.product .price {
  line-height: 12px;
  display: inline-flex;
  font-size: 12px;
  font-weight: 500;
  color: #e21314;
}

.product .ico {
  position: absolute;
  bottom: 2px;
  width: 14px;
  height: 14px;
}

.product .duihuan {
  position: absolute;
  right: 2px;
  bottom: 4px;
  line-height: 12px;
  display: inline-flex;
  font-size: 12px;
  font-weight: 500;
  color: #9c9c9c;
}

.header {
  margin-top: 10px;
  border-left: 2px solid #ffe202;
  display: inline-flex;
  padding-left: 10px;
  font-size: 600;
}

.more {
  margin-left: 64%;
  color: #787878;
  display: inline-flex;
  font-size: 12px;
}

.more_img {
  width: 12px;
  height: 12px;
  position: relative;
  top: 2px;
}

.p_c {
  position: relative;
}

.pinpai {
  /* width: 340rpx;
  height: 140rpx; */
  width: 260rpx;
  height: 100rpx;
  margin-top: 10px;
  margin-right: 10px;
  float: left;
  display: inline-flex;
  border-radius:5rpx;
}

.recommend_scroll_x_box {
  white-space: nowrap;
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box {
  width: 230rpx;
  margin-right: 48rpx;
  display: inline-block;
}

.recommend_hot_box2 {
  /* width: 350rpx; */
  width: 260rpx;
  overflow: hidden;
  margin-right: 20rpx;
  display: inline-block;
}

.recommend_hot_image {
  width: 230rpx;
  height: 143rpx;
}

.product2 {
  margin-top: 5px;
  float: left;
  position: relative;
  width: 48%;
  overflow: hidden;
  margin-right: 5px;
}

.product2 .img_p {
  /* width: 100%;
  height: 146px; */
  width: 330rpx;
  height: 330rpx;
}

.product2 .title {
  display: block;
  font-size: 12px;
  font-weight: 400;
   overflow: hidden;
  height: 16px;
}

.product2 .price {
  line-height: 12px;
  display: inline-flex;
  font-size: 12px;
  font-weight: 500;
  color: #e21314;
}

.product2 .ico {
  position: absolute;
  bottom: 2px;
  width: 14px;
  height: 14px;
}

.product2 .duihuan {
  position: absolute;
  right: 2px;
  bottom: 4px;
  line-height: 12px;
  display: inline-flex;
  font-size: 12px;
  font-weight: 500;
  color: #9c9c9c;
}
