/* pages/order/order.wxss */


page{
    background-color: #f5f5f6;
    font-family: PingFang SC Regular;
}

.no-order-prompt {
  text-align: center;
  margin-top: 150rpx;
  color:  #999;
  font-size: 25rpx;
  background-color: #f5f5f6;
}

.swiper-tab{  
  
  display: flex;
  width: 100%;   
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 999;
  height: 80rpx;
  background: white; 
  text-align: center;   
  line-height: 80rpx;  
  justify-content: space-around;
  border-bottom: 1rpx solid #ddd;
  
}  
.swiper-tab-list{
 
  font-size: 30rpx;   
  display: inline-block;   
  width: 20%;   
  color: #777777;   
}  
.on{  
  color: #ffe202;
  /* border-bottom: 4rpx solid #ffe202;   */
}  
.swiper-box{   
  display: block;  
  height: 100%;  
  width: 100%;  
  overflow: hidden;  
  margin-top: 80rpx;
 }  
.swiper-box view{   
  /* text-align: center;    */
}  

.cate{
  background-color: white;
  margin-right: 20rpx;
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
   border-bottom: 2rpx solid #ddd;
}
.cate-title{
  display: flex;
  background: white;
  font-size: 28rpx;
  color:#999999;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ddd;
}
.order-num{
  flex: 1;
  text-align: left;
}
.order-time{
  flex: 1;
  text-align: right;
}

.cate-item1{  
  display: flex;
  margin-top: 20rpx;
}
.aa{
  flex: 1.2;
}
.bb{
  flex: 2;
  padding: 0rpx 10px;
  text-align: left;
}
.cc{
  flex: 1;
  text-align: right;
}

.cate-item{

  display: flex;
  background-color: white;
  margin-top: 20rpx;
  margin-right: 40rpx;
  margin-left: 40rpx;
  padding: 0rpx 10rpx;
  border-radius: 12rpx;
  box-shadow: 10rpx 10rpx 2rpx #ddd;
}
.a{
  flex: 1;
}
.b{
  flex: 2;
  padding-right: 20rpx;
}
.img{
  width:80%;
  text-align:center;
  border-radius: 4rpx;
}
.title{
  font-size: 33.6rpx;
  color: #666;
  text-align: right;
}


