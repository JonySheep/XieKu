/* pages/category/category.wxss */

page {
  background-color: #f5f5f5;
  font-family: PingFang SC Regular;
}
.swiper-tab{  
  position: fixed;
  display: flex;
  width: 100%;   
  white-space: nowrap;
  /* height: 60px ;  */
  line-height: 60rpx; 
  top: 0rpx;
  left: 0rpx;
  z-index: 998;
  background: white; 
  text-align: center;    
  justify-content: space-around;
  border-bottom: 1rpx solid #ddd;
  overflow: scroll-x;
} 

.expand-style {
  z-index: 999;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 40rpx;
  height: 105rpx;
  background: linear-gradient(to left, #ffe202, white);
}

