}

/* 确认分享model框 */
.model{
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, .6);
  z-index: 999;
}
.model-box{
  height: 260rpx;
  width: 380rpx;
  background: #fff;
  margin: 400rpx auto;
  border-radius:10rpx; 
}
.model-box-top{
  height: 140rpx;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  padding-top: 40rpx;
}
.model-box-bottom{
  height: 79rpx;
  width: 100%;
}
.model-box-bottom button::after{
  border:none;
  border-radius: 0;
}

.model-box-bottom button{
  width: 190rpx;
  height: 100%;
  font-size: 24rpx;
  float: left;
  border: none;
  line-height: 80rpx;
  text-align: center;
  border-top: solid 1px #ddd;
  background:#fff;
  border-radius: 0;
}
.model-box-bottom .cancel{
  width: 189rpx;
  border-right: solid 1px #ddd;
  border-radius: 0 0 0 10rpx;
}
