/* pages/category/category.wxss */

page {
  background-color: #f5f5f5;
  font-family: PingFang SC Regular;
}

.content {
  width: 100%;
  height: 100%;
  display: flex;
}

.hide {
  display: none;
}

.left {
  width: 30%;
}

.swiper-tab-list {
  border-bottom: 3rpx solid #bfbfbf;
  font-size: 38rpx;
  color: #757575;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}

.on {
  background-color: white;
  border-left: 14rpx solid black;
}

.right {
  width: 70%;
  height: 1100rpx;
  background-color: white;
}

.swiper-image{

  height:120rpx;
  width: 240rpx;
  float: left;
  border: #a1a1a1 1rpx solid;
  margin-left: 10rpx;
  margin-top: 30rpx;

}

.cate-item {
  display: flex;
  margin-top: 40rpx;
}

.a {
  flex: 2;
}

.b {
  flex: 3;
  padding-right: 20rpx;
}

.img {
  width: 80%;
  text-align: center;
  border-radius: 4rpx;
}

.title {
  font-size: 33.6rpx;
  color: #666;
  text-align: right;
}

.score {
  font-size: 33.6rpx;
  color: red;
  text-align: right;
}
