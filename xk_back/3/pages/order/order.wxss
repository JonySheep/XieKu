/* pages/order/order.wxss */


page{
    background-color: #f5f5f6;
    font-family: PingFang SC Regular;
}

.swiper-tab{  
  
  display: flex;
  width: 100%;   
  background: white; 
  text-align: center;   
  line-height: 80rpx;  
  justify-content: space-around;
}  
.swiper-tab-list{
 
  font-size: 30rpx;   
  display: inline-block;   
  width: 20%;   
  color: #777777;   
}  
.on{  
    
  border-bottom: 8rpx solid #ffe202;  
}  
.swiper-box{   
  display: block;  
  height: 100%;  
  width: 100%;  
  overflow: hidden;  
 }  
.swiper-box view{   
  text-align: center;   
}  




.cate-item{
  
  display: flex;
  background-color: white;
  margin-top: 20rpx;
  margin-right: 40rpx;
  margin-left: 40rpx;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 12rpx;
  box-shadow: 10rpx 10rpx 2rpx #ddd;
}
.a{
  flex: 1;
}
.b{
  flex: 2;
  padding-right: 20rpx;
}
.img{
  width:80%;
  text-align:center;
  border-radius: 4rpx;
}
.title{
  font-size: 33.6rpx;
  color: #666;
  text-align: right;
}


