page{
    background-color: #fff;
    font-family: PingFang SC Regular;
}
 .swiper{
 
  width: 100%;
  text-align: center;
} 
.title{
  display: flex;
  background-color: white;
  padding: 10rpx 40rpx;
  
}
.title-1{
  flex: 9;
  font-size: 36rpx;
  color: #535353;
}
.title-2{
  flex: 1;
}
.score{
