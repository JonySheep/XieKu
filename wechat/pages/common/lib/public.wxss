.common-wrapper {
  width: 100%;
  max-width: 1280rpx;
  text-align: center;
  overflow: hidden;
  margin: 0 auto;
  color: #444749;
}

.textal {
  text-align: left;
}

.bgf5f5f5 {
  background-color: #f5f5f5;
}

.mb20 {
  margin-bottom: 20rpx;
}

.mr20 {
  margin-right: 20rpx;
}

.btn {
  font-size: 26rpx;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
  margin: 50px 0 0;
  background-color: #233953;
  color: #fff;
  border-radius: 4rpx;
  box-shadow: 0 6rpx 10rpx 0 rgba(28, 60, 97, 0.2);
}

.btn-hover {
  font-size: 26rpx;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
  margin: 50px 0 0;
  background-color: #1c2d42;
  color: #fff;
  border-radius: 4rpx;
  box-shadow: 0 0 0 0;
}

.retxt-input {
  text-align: left;
  font-size: 28rpx;
  height: 25px;
  color: #233953;
  padding: 10rpx 0;
  margin: 0 0 50rpx 0;
  border-bottom: 1rpx solid #ddd;
}

.sms-area {
  position: relative;
}

.sms-padding {
  padding: 10rpx 180rpx 10rpx 0;
}

.btnSms {
  height: 40rpx;
  font-size: 28rpx;
  color: #233953;
  position: absolute;
  right: 0;
  top: 6px;
  z-index: 10;
  display: inline-block;
}

.is_checked {
  font-size: 28rpx;
  color: #b5b5b5;
  position: absolute;
  right: 0;
  top: 6px;
  z-index: 10;
  display: inline-block;
}

.placeholder {
  color: #b5b5b5!important;
}

.head-title {
  color: #444749;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 48rpx;
  font-weight: bold;
  margin: 60rpx 0 90rpx 60rpx;
}

.fs26 {
  font-size: 26rpx;
}

.col233953 {
  color: #233953;
}

.col111b23 {
  color: #111b23;
}

.colb5b5b5b {
  color: #b5b5b5;
}

.col444796 {
  color: #444749;
}

.tab-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10; 
  width: 100%;
  height: 50px;
  display: flex;
  /* box-shadow: 0 0 15px 0 rgba(155, 143, 143, 0.3) !important; */
}

.tab-bottom-contain {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  overflow: hidden;
}

.tab-bottom-contain .bt{
  border-top: 0.5px solid #EEEEEE;
}

.tab-bottom-item {
  font-size: 14px;
  width: 50%;
  height: 100%;
  line-height: 50px;
  display: inline-block;
}

.tab-item-order{
  background: #EA5A49;
  color: #fff;
}
