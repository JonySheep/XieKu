page{
  background-color: #f5f5f5;
font-family: PingFang SC Regular;
}
.item{
  display: flex;
  background-color: white;
  margin-top: 20rpx;
  margin-right: 40rpx;
  margin-left: 40rpx;
  text-align: center;
  padding: 20rpx 20rpx;
  border-radius: 12rpx;
  box-shadow: 10rpx 10rpx 2rpx #ddd;
}
.a{
  flex: 1;
  margin-right: 10rpx;
}
.b{
  flex:3;
}

.img{
  width:100%;
  text-align:center;
  border-radius: 4rpx;
}
.title{
  font-size: 30rpx;
  color: #666;
  text-align: right;
}
.score{
  font-size: 30rpx;
  color: red;
  text-align: right;
  margin: 10rpx 0;
}