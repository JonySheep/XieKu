/* pages/activitydetails/activitydetails.wxss */
page{
  background-color: #f5f5f6;
  font-family: PingFang SC Regular;
}
.activityTime{
  font-size: 24rpx;
  margin-top: 1.1%;
}
.activityTime text{
  color: #888888;
}
.activityTitle{
  font-weight:bold;
  font-size:30rpx;
  margin-top:10px;

}
.topimg{
  width: 750rpx;
  height: 750rpx;
}
.pvAndCt view{
    float: left;
    margin-right: 3%;
}
.pvAndCt{
  width:100%;
  height:42rpx;
  font-size:22rpx;
  padding-top:2%;
  border-bottom:1px solid #ccc;
}
.activityDetails{
  border-top: 3px solid #e6e4e4;
  margin-top:2%;
}
.activityDetailsTitle{
  font-size:28rpx;
  font-weight:900;
  padding-left:4%;
  height:55rpx;
  border-bottom:1rpx solid #d6d6d6;
  line-height: 55rpx;
  padding-bottom:1%;
  padding-top: 1%;
}
.activityIn{
  color: red !important;
  font-weight: 900
}
.pvAndCt text{
  color: #888888;
}
.activityContent{
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
}
.head{
  text-align: center;
  background: white;
  padding: 5%;
  position: relative;
}
.head view{
  width: 89.7%;
  text-align: center;
  color: white;
  background: black;
  opacity: 0.5;
  position: absolute;
  bottom: 10%;
  font-size: 43.2rpx;
}
.moban1{
  background: white;
  padding: 0 5%;
  border-left: 10rpx solid #ffe202;
  font-size: 43.2rpx;
}
.moban2{
  padding: 2.5% 5%;
  background: white;
  font-size: 36rpx;
  margin-bottom: 20rpx;
  color: #999;
}

.footer{
  display: flex;
  font-size: 43.2rpx;
  background: white;
  padding: 20rpx 5%;
  border-top:1rpx solid #999;
  
}
.footer-1 {
  flex: 1;
  text-align: left;
}
.footer-2 {
  flex: 4;
  text-align:left;
}
.footer-3 {
  flex: 3;
  text-align: right;
}
.btn{
  background: #ffe202;
  border:0px;
  height:60rpx;
  line-height:60rpx;
  margin:0 0;
  color: black;

}
.floot > view{
  float: left;
  width:22%;
  border-right:1rpx solid #ccc;
  height:100%;
  background: #fff
}
.floot image{
  width: 22px;
  height: 22px;
}
.floot{
  position: fixed;
  width: 100%;
  height: 50px;
  bottom: 0;
  left: 0;
  background: #ffe202
}
.ljdh{
  width: 30% !important;
  border-right: none !important;
  background: #ffe202 !important;
}
.wocc{
  text-align: center;
  font-size: 24rpx;
}
.flootImg{
  top: 10rpx;
  position:relative;
  height:60%;

}
.flootImg>image{
  position:absolute;
  left:36%;
  top:11%;

}
.ljdh>button{
  font-size: 36rpx;
  line-height: 120rpx;
  border:none;
  width: 100%;
  height: 100%;
  background: #ffe202;
  text-align: right;
  font-weight: 600;
}
.fenxiang{
  position: relative;
}
.zhuanfa{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity:0;
  padding: 0
}
